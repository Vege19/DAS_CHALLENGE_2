<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bill_ProductName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginEnd="140dp"
            android:layout_marginStart="16dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cartProductImg"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Produc Name" />

        <TextView
            android:id="@+id/bill_PriceTxt"
            android:layout_width="63dp"
            android:layout_height="18dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textEnd"
            android:layout_gravity="right|center"
            app:layout_constraintBottom_toBottomOf="@+id/cartProductImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623"
            app:layout_constraintStart_toEndOf="@+id/cartProductImg"
            app:layout_constraintTop_toBottomOf="@+id/cartProductNameTxt"
            app:layout_constraintVertical_bias="1.0"
            tools:text="$0.00"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>